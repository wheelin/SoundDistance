<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mobop.sounddistance" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ResultListActivity"
            android:label="@string/title_activity_result_list" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".BtScanListActivity"
            android:label="@string/title_activity_bt_scan_list" >
        </activity>
        <activity
            android:name=".MeasureChoiceActivity"
            android:label="@string/title_activity_measure_choice" >
        </activity>
        <activity
            android:name=".MeasuringActivity"
            android:label="@string/title_activity_measuring" >
        </activity>
        <activity
            android:name=".RenameActionPopup"
            android:label="@string/title_activity_measure_action_popup" >
        </activity>
    </application>

</manifest>
